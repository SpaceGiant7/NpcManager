<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Activities.AddPersonActivity">

    <EditText
        android:id="@+id/addPersonNameTextInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addPersonHorizontalGuideline20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/addPersonEnableRaceText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addPersonHorizontalGuideline20"
        app:layout_constraintBottom_toTopOf="@id/addPersonEnableGenderText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="Add Race" />

    <TextView
        android:id="@+id/addPersonRaceTextField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableRaceText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableRaceText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addPersonVerticalGuideline50"
        android:gravity="center"
        android:text="Race" />

    <Spinner
        android:id="@+id/addPersonRaceSelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableRaceText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableRaceText"
        app:layout_constraintStart_toStartOf="@id/addPersonVerticalGuideline50"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/addPersonEnableGenderText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addPersonEnableRaceText"
        app:layout_constraintBottom_toTopOf="@id/addPersonEnableHomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="Add Gender" />

    <TextView
        android:id="@+id/addPersonGenderTextField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableGenderText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableGenderText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addPersonVerticalGuideline50"
        android:gravity="center"
        android:text="Gender" />

    <Spinner
        android:id="@+id/addPersonGenderSelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableGenderText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableGenderText"
        app:layout_constraintStart_toStartOf="@id/addPersonVerticalGuideline50"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/addPersonEnableHomeText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addPersonEnableGenderText"
        app:layout_constraintBottom_toTopOf="@id/addPersonEnableOccupationText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="Add Home" />

    <TextView
        android:id="@+id/addPersonHomeTextField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableHomeText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableHomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addPersonVerticalGuideline50"
        android:gravity="center"
        android:text="Home" />

    <Spinner
        android:id="@+id/addPersonHomeSelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableHomeText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableHomeText"
        app:layout_constraintStart_toStartOf="@id/addPersonVerticalGuideline50"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/addPersonEnableOccupationText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addPersonEnableHomeText"
        app:layout_constraintBottom_toTopOf="@id/addPersonEnableOrganizationText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="Add Occupation" />

    <TextView
        android:id="@+id/addPersonOccupationTextField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableOccupationText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableOccupationText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addPersonVerticalGuideline50"
        android:gravity="center"
        android:text="Occupation" />

    <Spinner
        android:id="@+id/addPersonOccupationSelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableOccupationText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableOccupationText"
        app:layout_constraintStart_toStartOf="@id/addPersonVerticalGuideline50"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/addPersonEnableOrganizationText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addPersonEnableOccupationText"
        app:layout_constraintBottom_toTopOf="@id/addPersonEnableMortalityText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="Add Organization" />

    <TextView
        android:id="@+id/addPersonOrganizationTextField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableOrganizationText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableOrganizationText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addPersonVerticalGuideline50"
        android:gravity="center"
        android:text="Organization" />

    <Spinner
        android:id="@+id/addPersonOrganizationSelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableOrganizationText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableOrganizationText"
        app:layout_constraintStart_toStartOf="@id/addPersonVerticalGuideline50"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/addPersonEnableMortalityText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addPersonEnableOrganizationText"
        app:layout_constraintBottom_toTopOf="@id/addPersonEnableDescriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="Add Mortality" />

    <TextView
        android:id="@+id/addPersonMortalityTextField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableMortalityText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableMortalityText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addPersonVerticalGuideline50"
        android:gravity="center"
        android:text="Mortality" />

    <Spinner
        android:id="@+id/addPersonMortalitySelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addPersonOrganizationSelector"
        app:layout_constraintBottom_toTopOf="@id/addPersonDescriptionTextField"
        app:layout_constraintStart_toStartOf="@id/addPersonVerticalGuideline50"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/addPersonEnableDescriptionText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addPersonEnableMortalityText"
        app:layout_constraintBottom_toTopOf="@id/addPersonHorizontalGuideline80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="Add Description" />

    <TextView
        android:id="@+id/addPersonDescriptionTextField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableDescriptionText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableDescriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/addPersonVerticalGuideline50"
        android:gravity="center"
        android:text="Description" />

    <EditText
        android:id="@+id/addPersonDescriptionTextInput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addPersonEnableDescriptionText"
        app:layout_constraintBottom_toBottomOf="@id/addPersonEnableDescriptionText"
        app:layout_constraintStart_toStartOf="@id/addPersonVerticalGuideline50"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:hint="Description"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/addPersonSaveButton"
        style="@style/ImageButtonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@android:drawable/ic_menu_save"
        app:layout_constraintTop_toBottomOf="@id/addPersonHorizontalGuideline80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/addPersonVerticalGuideline50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/addPersonHorizontalGuideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/addPersonHorizontalGuideline80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
