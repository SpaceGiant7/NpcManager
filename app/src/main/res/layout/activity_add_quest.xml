<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Activities.AddQuestActivity">


    <EditText
        android:id="@+id/addQuestNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/addQuestHorizontalGuideline20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:ems="10"
        android:hint="Quest Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/addQuestEnableLocationText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addQuestHorizontalGuideline20"
        app:layout_constraintBottom_toTopOf="@id/addQuestEnablePersonText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="@dimen/titleSize"
        android:textColor="@color/textGrey"
        android:text="Add Return Location" />

    <TextView
        android:id="@+id/addQuestLocationText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addQuestEnableLocationText"
        app:layout_constraintBottom_toBottomOf="@id/addQuestEnableLocationText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addQuestVerticalGuideline50"
        android:gravity="center"
        android:text="Return Location" />

    <Spinner
        android:id="@+id/addQuestLocationSelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addQuestEnableLocationText"
        app:layout_constraintBottom_toBottomOf="@id/addQuestEnableLocationText"
        app:layout_constraintStart_toEndOf="@id/addQuestLocationText"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/addQuestEnablePersonText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addQuestEnableLocationText"
        app:layout_constraintBottom_toTopOf="@id/addQuestEnableDetailsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="@dimen/titleSize"
        android:textColor="@color/textGrey"
        android:text="Add Quest Giver" />

    <TextView
        android:id="@+id/addQuestPersonText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addQuestEnablePersonText"
        app:layout_constraintBottom_toBottomOf="@id/addQuestEnablePersonText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addQuestVerticalGuideline50"
        android:gravity="center"
        android:text="Quest Giver" />

    <Spinner
        android:id="@+id/addQuestPersonSelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addQuestEnablePersonText"
        app:layout_constraintBottom_toBottomOf="@id/addQuestEnablePersonText"
        app:layout_constraintStart_toEndOf="@id/addQuestPersonText"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/addQuestEnableDetailsText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addQuestEnablePersonText"
        app:layout_constraintBottom_toTopOf="@id/addQuestHorizontalGuideline80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="@dimen/titleSize"
        android:textColor="@color/textGrey"
        android:text="Add Details" />

    <TextView
        android:id="@+id/addQuestDetailsText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/addQuestEnableDetailsText"
        app:layout_constraintBottom_toBottomOf="@id/addQuestEnableDetailsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/addQuestVerticalGuideline50"
        android:gravity="center"
        android:text="Details" />

    <EditText
        android:id="@+id/addQuestDetailsInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/addQuestEnableDetailsText"
        app:layout_constraintBottom_toBottomOf="@id/addQuestEnableDetailsText"
        app:layout_constraintStart_toStartOf="@id/addQuestVerticalGuideline50"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:ems="10"
        android:hint="Details"
        android:inputType="textMultiLine" />

    <ImageButton
        android:id="@+id/addQuestSaveButton"
        style="@style/ImageButtonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addQuestHorizontalGuideline80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/addQuestVerticalGuideline50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/addQuestHorizontalGuideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/addQuestHorizontalGuideline80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>