<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddQuestActivity">

    <TextView
        android:id="@+id/addQuestNameText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addQuestHorizontalGuideline10"
        app:layout_constraintBottom_toTopOf="@id/addQuestLocationText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addQuestVerticalGuideline50"
        android:gravity="center"
        android:text="Name" />

    <EditText
        android:id="@+id/addQuestNameInput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addQuestHorizontalGuideline10"
        app:layout_constraintBottom_toTopOf="@id/addQuestLocationSelector"
        app:layout_constraintStart_toEndOf="@id/addQuestNameText"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/addQuestLocationText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addQuestNameText"
        app:layout_constraintBottom_toTopOf="@id/addQuestPersonText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addQuestVerticalGuideline50"
        android:gravity="center"
        android:text="Return Location" />

    <Spinner
        android:id="@+id/addQuestLocationSelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addQuestNameInput"
        app:layout_constraintBottom_toTopOf="@id/addQuestPersonSelector"
        app:layout_constraintStart_toEndOf="@id/addQuestLocationText"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/addQuestPersonText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addQuestLocationText"
        app:layout_constraintBottom_toTopOf="@id/addQuestDescriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addQuestVerticalGuideline50"
        android:gravity="center"
        android:text="Quest Giver" />

    <Spinner
        android:id="@+id/addQuestPersonSelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addQuestLocationSelector"
        app:layout_constraintBottom_toTopOf="@id/addQuestDetailsInput"
        app:layout_constraintStart_toEndOf="@id/addQuestPersonText"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/addQuestDescriptionText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addQuestPersonText"
        app:layout_constraintBottom_toTopOf="@id/addQuestHorizontalGuideline80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addQuestVerticalGuideline50"
        android:gravity="center"
        android:text="Description" />

    <EditText
        android:id="@+id/addQuestDetailsInput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addQuestPersonSelector"
        app:layout_constraintBottom_toTopOf="@id/addQuestHorizontalGuideline80"
        app:layout_constraintStart_toEndOf="@id/addQuestDescriptionText"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/addQuestCreateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addQuestHorizontalGuideline80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/addQuestDeleteButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="Create" />

    <Button
        android:id="@+id/addQuestDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addQuestHorizontalGuideline80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addQuestCreateButton"
        android:gravity="center"
        android:text="Delete" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/addQuestVerticalGuideline50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="206dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/addQuestHorizontalGuideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="73dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/addQuestHorizontalGuideline80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>