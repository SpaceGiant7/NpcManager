<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FindBy.FindByGenderActivity">

    <TextView
        android:id="@+id/findByGenderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find By Gender"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/findByGenderHorizontalGuideline20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/findByGenderGenderText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Gender"
        android:textSize="@dimen/titleSize"
        app:layout_constraintTop_toTopOf="@id/findByGenderHorizontalGuideline20"
        app:layout_constraintStart_toStartOf="@id/findByGenderVerticalGuideline20"
        app:layout_constraintEnd_toEndOf="@id/findByGenderVerticalGuideline80" />

    <ListView
        android:id="@+id/findByGenderPersonList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/findByGenderGenderText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/findByGenderVerticalGuideline80"
        app:layout_constraintStart_toStartOf="@id/findByGenderVerticalGuideline20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/findByGenderVerticalGuideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/findByGenderVerticalGuideline80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/findByGenderHorizontalGuideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>