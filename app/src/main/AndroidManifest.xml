<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.npcmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.FindByTraitActivity"></activity>
        <activity
            android:name=".Activities.NewMainActivity"
            android:label="@string/title_activity_new_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.ViewCampaignsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ViewQuestActivity" />
        <activity android:name=".Activities.ViewPersonActivity" />
        <activity
            android:name=".Activities.AddPersonActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.AddQuestActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>